{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "declarations.d.ts", "src/**/*"],
  "exclude": ["tests/**/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./cache/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "noUncheckedSideEffectImports": true
  }
}
